<!DOCTYPE html>
<html>
  <head>
    <title>HistoricalMoments</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if current_user %>
    <h3> You are logged in as:  <%= current_user.username %> </h3>
    <%= link_to "Logout", sessions_path, method: :delete %>
    <% else %>
    <%= link_to "Login", new_session_path %>
  <% end %>

  <h3> <%= link_to "Hist. Moments", historical_moments_path %> 
  <%= link_to "Link Actors and Events", new_location_path %></h3>
    <%= yield %>
  </body>
</html>
